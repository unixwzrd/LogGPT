{
    "manifest_version": 3,
    "name": "LogGPT",
    "version": "1.0.3",
    "description": "LogGPT: Export ChatGPT conversation JSON logs.",
    "icons": {
        "16": "icons/Icon16.png",
        "32": "icons/Icon32.png",
        "48": "icons/Icon48.png",
        "96": "icons/Icon96.png",
        "128": "icons/Icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/download-icon.min.svg",
                "icons/download-icon.png"
            ],
            "matches": [
                "*://chatgpt.com/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*"
            ],
            "js": [
                "LogGPT-conf-export.js"
            ]
        }
    ],
    "host_permissions": [
        "*://chatgpt.com/*"
    ],
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "action": {
        "default_icon": {
            "16": "icons/Icon16.png",
            "32": "icons/Icon32.png",
            "48": "icons/Icon48.png"
        }
    }
}
